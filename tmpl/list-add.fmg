{
 div{id="add-list", class="add-list-editor",
  form{hx={post=makePath("board"), target="#board"},
   div{class="list-title-edit",
    input{class="list-title-textarea", type="text", maxlength="30", name="name",
          placeholder='Enter list title...', style='width: 245px; height: 17px;',
          autofocus="true",
    },
   },
   div{class="edit-buttons",
    button{class="edit-button", type="submit", tabindex='0',
           style='background-color: rgb(90, 172, 68);',
     "Add list",
    },
    button{class="edit-button-cancel", type="button", tabindex='0',
           hx={get=makePath("list-cancel"), target="#add-list", swap="outerHTML"},
     include"icon-close",
    },
   },
  },
 },
}
