{
 div{id="edit-card", class="edit-card",
  form{hx={put=makePath("card-save", {listid=card.listid, id=card.id}),
           target="#edit-card", 
           swap="outerHTML"},
   div{class="card",
    textarea{class="edit-card-textarea", name="label", style='height: 34px;',
             maxlength="300", autofocus="true",
     card.label,
    },
    input{type="hidden", name="listId", value=card.id},
   },
   div{class="edit-buttons",
    button{class="edit-button", type="submit", tabindex='0',
           style='background-color: rgb(90, 172, 68);',
           _="on htmx:afterOnLoad remove #edit-card",
     "Save",
    },
    button{class="edit-button", type="button", tabindex='0',
           style='background-color: rgb(234, 37, 37);',
           hx={delete=makePath("card-delete", {listid=card.listid, id=card.id})},
           _="on htmx:afterOnLoad remove #edit-card",
     "Delete",
    },
    div{class="edit-button-cancel", tabindex='0',
        hx={get=makePath("card-get", {listid=card.listid, id=card.id}),
            target='#edit-card', swap="outerHTML"},
     include"icon-close",
    },
   },
  },
 },
}
